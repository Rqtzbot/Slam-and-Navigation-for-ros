<robot name="mychar">
    <link name="base_link">
        <visual>    
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="box_color">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    <!--设置碰撞参数-->
     <!--规则几何体直接将geometry origin复制过来即可-->
    <collision>
         <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
      <!--设置惯性矩阵-->
    <inertial>
        <origin xyz="0 0 0"/>
        <mass value="2"/> <!--质量-->
        <inertia ixx="1" ixy="0" ixz="0" iyy="0" iyz="1" izz="1"/>
    </inertial>
 </link>
      <!--gazebo的颜色-->
    <gazebo reference="base_link">
        <material>Gazebo/Red</material>
    </gazebo>
</robot>